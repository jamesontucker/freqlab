<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pascal_name}}</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #0f0f1a 100%);
            color: white;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            user-select: none;
            overflow: hidden;
        }

        h1 { font-size: 22px; font-weight: 600; margin-bottom: 20px; }

        .controls { display: flex; gap: 40px; margin-top: 10px; }

        .section {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        .section-label {
            font-size: 11px;
            color: #6c9ced;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .knob-row { display: flex; gap: 15px; }

        .control { display: flex; flex-direction: column; align-items: center; gap: 8px; }

        .knob-container { position: relative; width: 70px; height: 70px; }

        .knob {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: linear-gradient(145deg, #2b2b3d, #1a1a2e);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4), inset 0 1px 1px rgba(255, 255, 255, 0.1);
            cursor: pointer;
        }

        .knob-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 11px;
            font-weight: 600;
            pointer-events: none;
            white-space: nowrap;
        }

        label { font-size: 11px; font-weight: 500; color: #a0a0b0; text-transform: uppercase; letter-spacing: 1px; }

        .large .knob-container { width: 90px; height: 90px; }
        .large .knob-value { font-size: 13px; }
    </style>
</head>
<body>
    <h1>{{pascal_name}}</h1>

    <div class="controls">
        <div class="section large">
            <div class="control">
                <label>Gain</label>
                <div class="knob-container">
                    <div class="knob" id="gainKnob" data-param="gain" data-min="-30" data-max="12" data-value="0" data-unit=" dB">
                        <div class="knob-value">0 dB</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section">
            <div class="section-label">Envelope</div>
            <div class="knob-row">
                <div class="control">
                    <label>Attack</label>
                    <div class="knob-container">
                        <div class="knob" data-param="attack" data-min="0.001" data-max="2" data-value="0.01" data-unit=" s">
                            <div class="knob-value">10 ms</div>
                        </div>
                    </div>
                </div>
                <div class="control">
                    <label>Decay</label>
                    <div class="knob-container">
                        <div class="knob" data-param="decay" data-min="0.001" data-max="2" data-value="0.1" data-unit=" s">
                            <div class="knob-value">100 ms</div>
                        </div>
                    </div>
                </div>
                <div class="control">
                    <label>Sustain</label>
                    <div class="knob-container">
                        <div class="knob" data-param="sustain" data-min="0" data-max="1" data-value="0.8" data-unit="">
                            <div class="knob-value">80%</div>
                        </div>
                    </div>
                </div>
                <div class="control">
                    <label>Release</label>
                    <div class="knob-container">
                        <div class="knob" data-param="release" data-min="0.001" data-max="5" data-value="0.3" data-unit=" s">
                            <div class="knob-value">300 ms</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let activeKnob = null;
        let startY = 0;
        let startValue = 0;

        document.querySelectorAll('.knob').forEach(knob => {
            updateKnobVisual(knob);
            knob.addEventListener('mousedown', e => {
                activeKnob = knob;
                startY = e.clientY;
                startValue = parseFloat(knob.dataset.value);
                document.body.style.cursor = 'ns-resize';
                e.preventDefault();
            });
        });

        document.addEventListener('mousemove', e => {
            if (!activeKnob) return;
            const min = parseFloat(activeKnob.dataset.min);
            const max = parseFloat(activeKnob.dataset.max);
            const range = max - min;
            const delta = (startY - e.clientY) / 200 * range;
            let newValue = Math.max(min, Math.min(max, startValue + delta));
            activeKnob.dataset.value = newValue;
            updateKnobVisual(activeKnob);
            const paramId = activeKnob.dataset.param;
            if (window.__JUCE__ && window.__JUCE__.backend) {
                window.__JUCE__.backend.setParameter(paramId, newValue);
            }
        });

        document.addEventListener('mouseup', () => {
            activeKnob = null;
            document.body.style.cursor = 'default';
        });

        function updateKnobVisual(knob) {
            const min = parseFloat(knob.dataset.min);
            const max = parseFloat(knob.dataset.max);
            const value = parseFloat(knob.dataset.value);
            const unit = knob.dataset.unit || '';
            const paramId = knob.dataset.param;

            // Format display value
            let displayText;
            if (paramId === 'gain') {
                displayText = (value >= 0 ? '+' : '') + value.toFixed(1) + unit;
            } else if (paramId === 'sustain') {
                displayText = (value * 100).toFixed(0) + '%';
            } else {
                // Time parameters
                const ms = value * 1000;
                displayText = ms < 1000 ? ms.toFixed(0) + ' ms' : value.toFixed(2) + ' s';
            }

            const valueDisplay = knob.querySelector('.knob-value');
            if (valueDisplay) valueDisplay.textContent = displayText;

            // Rotation
            const normalized = (value - min) / (max - min);
            const angle = -135 + normalized * 270;
            knob.style.transform = `rotate(${angle}deg)`;
        }

        window.onParamChange = function(paramId, value) {
            const knob = document.querySelector(`[data-param="${paramId}"]`);
            if (knob) {
                knob.dataset.value = value;
                updateKnobVisual(knob);
            }
        };

        window.addEventListener('load', () => {
            if (window.__JUCE__ && window.__JUCE__.backend) {
                window.__JUCE__.backend.requestInit();
            }
        });
    </script>
</body>
</html>
